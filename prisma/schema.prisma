generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String
  secondName String
  password   String
  phone      String?
  email      String  @unique
  role       Roles
}

enum Roles {
  client
  business
}
