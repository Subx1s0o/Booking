generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  secondName   String
  password     String
  phone        Int?
  email        String         @unique
  reservations Reservations[] @relation("UserReservations")
  role         Roles
}

model Reservations {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  clientId   String @db.ObjectId
  client     User   @relation("UserReservations", fields: [clientId], references: [id])
  businessId String
}

enum Roles {
  client
  business
}
